<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
  <Shell >
    <App>
      <pages>
        <Page title="{i18n_en>homePageTitle}">
          <content>
            <Panel headerText="{i18n_en>helloPanelTitle}">
              <content>
                <Button text="{i18n_en>showHelloButtonText}" press=".onShowHello" />

                <Input value="{/recipient/name}" description="Hello {/recipient/name}!!!" valueLiveUpdate="true" width="60%" />
              </content>
            </Panel>
          </content>
        </Page>
      </pages>
    </App>
  </Shell>

</mvc:View>